{
  "name": "workshopos-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "prisma generate --schema=./packages/db/prisma/schema.prisma",
    "db:migrate": "dotenv -e ./.env -- prisma migrate dev --schema=./packages/db/prisma/schema.prisma",
    "db:seed": "dotenv -e ./.env -- ts-node ./packages/db/prisma/seed.ts",
    "test": "turbo test",
    "test:e2e": "cd apps/web && npx playwright test",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.2.5",
    "prisma": "^5.12.1",
    "ts-node": "^10.9.2",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0"
  }
}
